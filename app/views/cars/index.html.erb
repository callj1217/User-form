<h1>Cars</h1>
<ul class="nav">
	<li> <%= link_to "Cars", cars_path%><li>
	<li> <li> <%= link_to "Users", users_path%><li><li>	
</ul>

<table style = "border: 1px solid black">

	<tr>
		<th>Id</th>
		<th>Brand</th>
		<th>Model</th>
		<th>Number of Wheels</th>
		<th>Engine Size</th>
		<th>Date of Purchase</th>
		<th>Car electric</th>
		<th>User</th>
	</tr>
	<% @cars.each do |car| %>
		<tr>
			<td style = "border: 1px solid black"><%= car.id %></td>
 			<td style = "border: 1px solid black"><%= car.brand %></td>
  			<td style = "border: 1px solid black"><%= car.model %></td>
  			<td style = "border: 1px solid black"><%= car.num_wheels %></td>
  			<td style = "border: 1px solid black"><%= car.engine_size %></td>
  			<td style = "border: 1px solid black"><%= car.date_purchased&.strftime("%m/%d/%Y") %></td>
  			<td style = "border: 1px solid black"><%= car.print_yes_or_no(car.is_eletric) %></td>
  			<td style = "border: 1px solid black"><%= link_to car&.user&.first_name, user_path(car.user) if car.user %></td>
  			<td><%= link_to "Edit", edit_car_path(car), :class => 'button edit btn btn-2' %></td>
			<td><%= link_to "Delete", car , :method => 'delete', :class => 'button delete btn btn-2', data: {confirm: "Are you sure?"} %></td>
  		<tr>
 	<%end%>
 </table>
 <%= link_to("New", new_car_path, class: "btn btn-success" ) %>



