<%=	form_for @user do |f| %>

		<div class="form-group">
			<div class='col-md-3'>
				<label>First Name</label>
			</div>
			<div class='col-md-9'>
				<%= f.text_field :first_name, class: 'form-control'%><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Last Name</label>
			</div>
			<div class='col-md-9'>
				<%= f.text_field :last_name, class: 'form-control'%><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Number of Sibilings</label>
			</div>
			<div class='col-md-9'>
				<%= f.number_field :num_siblings, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Shoe Size</label>
			</div>
			<div class='col-md-9'>
				<%= f.number_field :shoe_size, step: 0.5, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Are you a U.S. citizen?</label>
			</div>
			<div class='col-md-9'>
				<%= f.check_box :us_citizen, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Date of birth</label>
			</div>
			<div class='col-md-9'>
				<%= f.date_field :birth, class: 'form-control' %><br>
			</div>

			<div class="form-group">
			<div class='col-md-3'>
				<label>Email</label>
			</div>
			<div class='col-md-9'>
				<%= f.text_field :gmail, class: 'form-control' %><br>
			</div>
		</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Password</label>
			</div>
			<div class='col-md-9'>
				<%= f.text_field :password_digest, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
				<%= f.submit 'Submit', class: "btn btn-success" %><br>
		</div>
<% end %>