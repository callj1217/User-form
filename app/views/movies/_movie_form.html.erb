<%=	form_for @movie do |f| %>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Title</label>
			</div>
			<div class='col-md-9'>
				<%= f.text_field :title, class: 'form_control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Rating</label>
			</div>
			<div class='col-md-9'>
				<%= f.number_field :rating, step:0.5, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Date of Movie</label>
			</div>
			<div class='col-md-9'>
				<%= f.date_field :date, class: 'form-control' %><br>
			</div>
		</div>

		<div class="form-group">
			<div class='col-md-3'>
				<label>Owner user id</label>
			</div>
			<div class='col-md-9'>
				<%= f.select :user_id, @movie.owner_select_options ,  class: 'form-control' %><br>
			</div>
		</div>
		<div class="form-group">
				<%= f.submit "Submit", class: "btn btn-success" %><br>
		</div>
	<% end %>